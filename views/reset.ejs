<% include partials/header %>

<div class="row">
  <div class="col-md-12">
    <form class="" action="/reset/<%=token%>" method="post">
      <legend>Reset Password</legend>
      <div class="form-group">
        <label for="password">Enter a new password</label>
        <input type="password" name="password" autofocus class="form-control">
      </div>
      <div class="form-group">
        <label for="confirm">Repeat the password</label>
        <input type="password" name="confirm" autofocus class="form-control">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Reset Password">
      </div>
    </form>
  </div>
</div>

<% include partials/footer %>
